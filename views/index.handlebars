<div id="home">

  <div class="topBanner">
    <span class="pageHeader">Get the latest Tech News</span>
    <button id="submit" class="btn btn-primary">Get Newest</button>
  </div>
  <div class="clear"></div>
  <div class="container">
    <h3>Articles:</h3>

    <ul id="article-list" class="list-group">
      {{#each content}}
      <li class="list-group-item row">

        <div class="center-align col s3 picture">
          <img src="{{this.photo}}">
        </div>

        <div class="col s8">
          <h5>{{this.userName}}</h5>
          <p>{{this.summary}}</p>
          <p>By {{this.author}}</p>
          <a href="{{this.url}}" class="btn btn-primary">Full Article</a>
          <button type="button" class="btn btn-danger" data-target="modal1" data-id="{{this._id}}"
            data-sum="{{this.userName}}" id="seeNote">See Note</button>
          <button type="button" class="btn btn-danger" data-id="{{this._id}}" data-sum="{{this.userName}}"
            id="writeNote">Write Note</button>
        </div>
      </li>
      <hr>
      {{/each}}
    </ul>

