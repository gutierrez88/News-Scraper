    <div id="notesModal" class="modal">
      <div class="modal-content">
        <h4 id="modalUserName"></h4>
        <h6>Note Title</h6>
        <input type="textarea" id="noteTitle">
        <h6>Note</h6>
        <textarea type="textarea" id="noteBody" rows="3"></textarea>
